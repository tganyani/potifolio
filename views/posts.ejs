<html lang="en">
    <%-include('./partials/header'); -%>
<body>
  <!-- nav bar -->
  <%-include('./partials/navbar'); %>
    <div class="container-fluid ">
      <h1>Posts</h1>
      <div class="posts">
        <% for(var i=0; i<posts.length; i++) {%>
          <div class="card" >
            <img src=<%=posts[i].imageUrl %> class="card-img-top" alt="...">
            <div class="card-body">
              <p class="card-text">
                <%= posts[i].description %>
              </p>
            </div>
          </div>
          <% } %>
      </div>
    </div>
   
    <!-- footer -->
    <%-include('./partials/footer'); %>
    <!-- scrpts -->
    <%-include('./partials/scripts'); %>

</body>
</html>